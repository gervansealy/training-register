{
  "rules": {
    "users": {
      "$uid": {
        ".read": true,
        ".write": true
      }
    },
    "trainingRecords": {
      ".read": true,
      ".write": true,
      "$recordId": {
        ".validate": "newData.hasChildren(['personName', 'company', 'trainingType', 'dateCompleted', 'expiryDate', 'trainingOrg'])"
      }
    },
    "settings": {
      ".read": true,
      ".write": true
    },
    "trainingTypes": {
      ".read": true,
      ".write": true
    },
    "notifications": {
      ".read": true,
      ".write": true
    }
  }
}
